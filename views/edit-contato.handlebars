<body class="body-edit">
    <div>
        <!-- Menu -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src='logo.png' widht=255 height=55 alt="Sistema de cadastro"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="http://localhost:8080/">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Contato
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item active" href="http://localhost:8080/add-contato">Cadastrar Contato</a></li>
                            <li><a class="dropdown-item" href="http://localhost:8080/list-contato">Listar Contato</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Próximo</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Opções</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                </div>
            </div>
        </nav>
        <!-- Fim menu -->
    </div>
    <div class="container">
        <h1 class="text-center mt-3 mb-5">Editar Contato!</h1>

        <!-- imprimir as mensagens que estao na sessao -->
        {{>_msg}}

        <!-- Formulario cadastrar contato -->
        <form action="/edit-contato/{{contato.id}}" method="POST">
            <div class="row">
                <!-- Nome -->  
                <div class="mb-3">
                    <label for="name" class="form-label">Nome: </label>
                    <input type="text" name="name" class="form-control" id="name" value="{{contato.name}}" placeholder="Comece a digitar" aria-describedby="nome" required>
                </div>
                <!-- Fim nome -->

                <!-- Email -->
                <div class="col mb-3">
                  <label for="email" class="form-label">Endereço de Email: </label>
                  <input type="email" name="email" class="form-control" id="email" value="{{contato.email}}" placeholder="Exemplo: name@email.com" required>
                </div>
                <!-- Fim email -->

                <!-- Telefone-->
                <div class="col mb-3">
                  <label for="phone" class="form-label">Número do Telefone: </label>
                  <input type="text" name="phone" class="form-control" id="phone" value="{{contato.phone}}" placeholder="Exemplo: 11 91234-4321">
                </div>
                <!-- Fim telefone -->
            </div>
            
            <!-- Mensagem --> 
            <div class="mb-3">
              <label for="descricao" class="form-label">Digite sua mensagem: </label>
              <textarea type="text" name="descricao" class="form-control" id="descricao" value="{{contato.descricao}}" rows="3"placeholder="Se deixar em branco manterá a descrição existente" required></textarea>
            </div>
            <!-- Fim mensagem -->
            <button class="btn btn-success" type="submit">Confimar</button>
            <a class="btn btn-warning" href="list-banco">Cancelar</a>
        </form>
        <!-- Fim formulario cadastrar contato -->
    </div>
</body>

