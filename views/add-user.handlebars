        <!-- Fim menu -->
    </div>
    <div class="container">
        <h1 class="text-success text-center mt-3 mb-5">Cadastrar Usuário!</h1>
        
        <!-- imprimir as mensagens que estao na sessao -->
        {{>_msg}}        

        <!-- Formulário cadastro usuario -->
        <form action="add-user" method="POST">
          <!-- Nome -->  
          <div class="mb-3">
            <label for="name" class="form-label text-success">Nome: </label>
            <input type="text" name="name" class="form-control" id="name" aria-describedby="nome">
            <div id="nome" class="text-white form-text" required>Digite seu nome no campo acima</div>
          </div>
          <!-- Fim nome -->

          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label text-success">Endereço de Email: </label>
            <input type="email" name="email" class="form-control" id="email" aria-describedby="email">
            <div id="email" class="text-white form-text" required>Digite seu melhor e-mail no campo acima</div>
          </div>
          <!-- Fim email -->
          
          <!-- Password -->
          <div class="mb-3">
            <label for="password" class="form-label text-success">Senha: </label>
            <input type="password" name="password" class="form-control" id="password" autocomplete="on">
            <div id="password" class="text-white form-text" required>Digite uma senha forte no campo acima</div>

          </div>
          <!-- Fim password -->
          <button class="btn btn-success" type="submit" class="btn btn-success">Cadastrar</button>
          <a class="btn btn-primary" href="list-user">Listar Usuários</a>
        </form>
        <!-- Fim formulário cadastro usuario -->
    </div>
</body>

